<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>
     <appender name="CA" class="org.apache.log4j.ConsoleAppender">
         <layout class="org.apache.log4j.PatternLayout">
             <!-- <param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm:ss,SSS} %-4r [%t] %-5p %c %x:%l - %m%n" /> -->
             <param name="ConversionPattern" value="%d{HH:mm:ss} [%X{IP}] [%X{USER}]  %m%n" />
         </layout>
     </appender>
     <appender name="FA" class="org.apache.log4j.FileAppender">
          <param name="File" value="logs/appicationLog.log"/>
          <param name="Threshold" value="TRACE"/>
          <layout class="org.apache.log4j.PatternLayout">
               <param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm:ss,SSS} [%X{IP}] [%t] %-5p %c %x - %m%n" />
          </layout>
     </appender>
   
     <logger name="org.springframework">
     	<level value="INFO"/>
     </logger>
     
     <logger name="pl.pioro">
     	<level value="TRACE"/>
     </logger>

     <root>
          <level value="INFO" />
          <appender-ref ref="CA" />
          <!--  <appender-ref ref="FA" />-->
      </root>
</log4j:configuration>